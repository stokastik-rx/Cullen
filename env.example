# Project Configuration
PROJECT_NAME=FastAPI Production Starter
VERSION=0.1.0
DESCRIPTION=A production-ready FastAPI starter application

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=False

# CORS Configuration (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Security
SECRET_KEY=your-secret-key-change-in-production-use-a-strong-random-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
# PostgreSQL (recommended)
# Requires: `psycopg[binary]` installed (included in requirements.txt)
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/cullen

# Logging
LOG_LEVEL=INFO

# =========================
# Billing / Stripe
# =========================
# Never commit real keys. Put these values in your local `.env` (or your hosting provider's env vars).
#
# Test mode keys start with: sk_test_... / whsec_...
# Live mode keys start with: sk_live_... / whsec_...
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_ID_PREMIUM=

# Public URL of your site (used for Stripe success/cancel/return URLs)
APP_BASE_URL=http://localhost:8000

